{
    "compilerOptions": {
        "module": "ES2020",
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "target": "ES2020",
        "noImplicitAny": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "sourceMap": false,
        "outDir": "scripts/",
        "typeRoots": [
            "./typings"
        ]
    },
    "include": [
        "src/**/*",
        "typings"
    ],
    "exclude": [
        "node_modules",
        "scripts",
    ],
}